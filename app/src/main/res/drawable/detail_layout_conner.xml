<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorWhite" />
            <gradient android:angle="-90" android:endColor="@color/colorWhite" android:startColor="@color/colorWhite" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/colorOrange" />
            <gradient android:angle="-90" android:endColor="#11F79743" android:startColor="@color/colorWhite" />
        </shape>
    </item>
</selector>