<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--Root container-->
    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!--View while view is collapsed-->
        <FrameLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_chatheader"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:gravity="center"
                        android:text="Run: "
                        android:textSize="19dp" />


                    <TextView
                        android:id="@+id/tv_word_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="TextView"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_word_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text=" đi lại , di chuyển" />
            </LinearLayout>


        </FrameLayout>

        <!--View while view is expanded-->
        <!--View while view is expanded-->
        <!--View while view is expanded-->
        <!--View while view is expanded-->
        <!--View while view is expanded-->

        <FrameLayout
            android:id="@+id/expanded_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_chatheader_full"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/close_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_close" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thoát hẳn" />

                    <ImageView
                        android:id="@+id/open_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_open"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cb_detail_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hiển thị nghĩa" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="(2/100)"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detail_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Headphone"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tv_detail_word_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="/het phon/"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/btn_detal_read"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_speak" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_word_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tai nghe"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_detail_word_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="I have a head phone" />

                <TextView
                    android:id="@+id/tv_detail_word_example_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text=" Tôi có cái tai nghe" />

                <CheckBox
                    android:id="@+id/cb_detail_check_good"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Đã thuộc từ" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/prev_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/ic_previous"
                        tools:ignore="ContentDescription" />

                    <!--Play button-->
                    <ImageView
                        android:id="@+id/play_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_play"
                        tools:ignore="ContentDescription" />

                    <!--Next button-->
                    <ImageView
                        android:id="@+id/next_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_play_next"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/btn_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />
                </LinearLayout>

            </LinearLayout>


            <!--Album image for the song currently playing.-->


        </FrameLayout>
    </RelativeLayout>
</FrameLayout>