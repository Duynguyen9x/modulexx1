<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_talk"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/talk"/>

        <TextView
            android:id="@+id/tv_question_part2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_talk"
            android:layout_marginTop="-20dp"
            android:text="Question"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/grp_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_question_part2"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rad_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="(A) "
                android:textSize="18sp"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:theme="@style/MyRadioButton"
                android:background="@drawable/detail_layout_conner"/>

            <RadioButton
                android:id="@+id/rad_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="(B) "
                android:textSize="18sp"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:theme="@style/MyRadioButton"
                android:background="@drawable/detail_layout_conner"/>

            <RadioButton
                android:id="@+id/rad_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="(C) "
                android:textSize="18sp"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:theme="@style/MyRadioButton"
                android:background="@drawable/detail_layout_conner"/>

            <RadioButton
                android:id="@+id/rad_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="(D) "
                android:textSize="18sp"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:theme="@style/MyRadioButton"
                android:background="@drawable/detail_layout_conner"/>
        </RadioGroup>
    </RelativeLayout>

</ScrollView>
