<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.add.toeic.fragment.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/layout_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_chatheader_full"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/close_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:id="@+id/tv_close_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thoát hẳn"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:id="@+id/open_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_open"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/cb_detail_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hiển thị nghĩa"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="(2/100)"
                android:textColor="@color/colorWhite"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_detail_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Headphone"
                    android:textColor="@color/colorWhite"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail_word_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="/het phon/"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/btn_detal_read"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/icon_speak" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail_word_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Tai nghe"
                android:textColor="@color/colorAccent"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_detail_word_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="I have a head phone"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_detail_word_example_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Tôi có cái tai nghe"
                android:textColor="@color/colorWhite" />

            <CheckBox
                android:id="@+id/cb_detail_check_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Đã thuộc từ"
                android:textColor="@color/colorWhite" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/prev_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/ic_previous"
                    tools:ignore="ContentDescription" />

                <!--Play button-->
                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_play"
                    tools:ignore="ContentDescription" />

                <!--Next button-->
                <ImageView
                    android:id="@+id/next_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_play_next"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/btn_time"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_button"
                    android:text="3 s"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_chatheader"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:text="Run:"
                    android:textSize="18dp"
                    android:textColor="@color/colorWhite" />


                <TextView
                    android:id="@+id/tv_word_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:layout_marginEnd="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_word_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="đi lại, di chuyển"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_changeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Change style"
        android:textColor="@color/colorWhite"
        android:background="@drawable/circle_chatheader_full"/>
</LinearLayout>
